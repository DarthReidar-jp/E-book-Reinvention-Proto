doctype html
html
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM", crossorigin="anonymous")
    link(rel="stylesheet", href="/stylesheets/display.css")
    link(rel="stylesheet", href="/stylesheets/writer.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/simplemde/1.11.2/simplemde.min.css")
  body
    header
      .container.row
        a.col-1.custom-btn(href='/bookDisplay') 本一覧画面
        form.col-4.search-form(method="GET", action="/treeSearch")
          .search-input-group
            input.search-form-control(type="text", name="query", placeholder="Search memos...")
            .search-input-group-append
              button.btn-search(type="submit") ツリーサーチ        
    .container-fluid
      .row
        .col-md-2.sidebar
          .sidebar-content
            p Import Memos
            form(method="POST", action="/import", enctype="multipart/form-data")
              .import-group
                input.import-form(type="file", name="jsonFile", accept=".json")
                button.import-btn(type="submit") Import
            ul.folder-group
              if folders && folders.length > 0
                each folder in folders
                  li.folder-group-item
                    a(href=`/folders/${folder._id}`) #{folder.name}
              else
                li.folder-group-item フォルダがありません
        .col-md-10.main-content
          .row
            .col-md-12
              .card.p-3
                .card-body
                  form(method="POST", action="/writer")
                    .form-group.mb-3
                      input#title.title-design(type="text", name="title", placeholder="タイトルを入力", required=true, autofocus)
                    .form-group.mb-3.d-none
                      label(for="markdownEditor") コンテンツ
                      textarea#markdownEditor.form-control(name="content", placeholder="ここにマークダウンで文章を記入", required=true)
                    button.custom-btn.float-right(type="submit") 送信
    script(src="https://cdnjs.cloudflare.com/ajax/libs/simplemde/1.11.2/simplemde.min.js")
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz", crossorigin="anonymous")
    script(src="/javascripts/display.js")
    script(src="/javascripts/writer.js")
    script.
      $(document).ready(function() {
        var simplemde = new SimpleMDE({ element: document.querySelector('#markdownEditor') });
        $('#title').keydown(function(e) {
          if (e.key === 'Enter') {
            e.preventDefault();
            $(this).closest('form').submit();
          }
        });
      });
