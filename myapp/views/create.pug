doctype html
html
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/display.css')
    link(rel='stylesheet', href='/stylesheets/create.css')
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous")
    script(src="/javascripts/create.js")
  body
    header
      .container.row
        a.col-2.custom-btn(href='/display') Back
 
    .container.mt-5
      .row.justify-content-center
        .col-lg-8 
          .card.p-3
            .card-body
              form(method="POST",action="/create")
                .form-group.mb-3
                  input.title(type="text", name="title",placeholder="", required=true,autofocus)
                .form-group.mb-3.d-none
                  textarea.content(type="text", name="content", placeholder="", required=true)
                button.custom-btn.float-right(type="submit") 送信
